
{{#if lists.length}}
  <div class="col-md-6 list-list">
    <h3>Current lists:</h3>

    {{#each lists as |list|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/list/{{list.id}}">{{list.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{list.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}



<!-- Navbar -->
<div class="container containerNav mt-4">
    <nav class="navbar navbar-expand-lg navbar-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <!-- when click on a <a> tag it refreshes the page and stops that-->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto">
        
        <li class="list active">
          <a class="nav-link" href="javascript:void(0);" id="yourListBtn">Your list</a>
        </li>

        <li class="list">
          <a class="nav-link" href="javascript:void(0);" id="newListBtn">New list</a>
        </li>
      </ul>
    </div>
    </nav>
</div>
<!-- Lists Container -->
<div class="container mainCon mt-5 hideCons" id="yourList">

    <div class="row listItem">
        <div class="col-8">List - 1</div> <!--List Name-->
        <div class="col-4 text-right"><button class="viewBtn btn btn-success">View</button></div>
    </div>

    <div class="row listItem">
        <div class="col-8">List - 2</div> <!--List Name-->
        <div class="col-4 text-right"><button class="viewBtn btn btn-success">View</button></div>
    </div>

    <div class="row listItem">
        <div class="col-8">List - 3</div> <!--List Name-->
        <div class="col-4 text-right"><button class="viewBtn btn btn-success">View</button></div>
    </div>
</div>
